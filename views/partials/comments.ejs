<div class="sqs-block html-block sqs-block-html" data-block-type="2" id="block-8d8156722d8e328e16b8">
    <div class="sqs-block-content">
    
        <div class="row sqs-row">
            <div class="col sqs-col-4 sqs-col-comment">
                <h3> <%= title %></h3>
            </div>
            <div class="col sqs-col-4 sqs-col-comment" style="float: right;">
                <p>
                  <!-- <div class=" bg-accent shadow shadow-accent-light undefined px-8 py-3 rounded-full text-center undefined cursor-pointer hover:scale-103 active:scale-99 duration-500"><p class="text-sm font-medium undefined text-black tracking-widest">VOTE</p></div> -->
                    <button 
                      class="big-rounded-button" 
                      onclick="toggleHiddenDraft('draft-comment-box')"
                      style="float: right;">
                        Vote/Comment
                    </button>
                </p>
            </div>
        </div>

        <div class="row sqs-row">
            <ul class="comment-filter">
                <li class="active">All</li>
                <li>MBTI</li>
                <li>Eneagram</li>
                <li>Zodiac</li>
            </ul>
        </div>

        <div class="row sqs-row">
            <button class="sorting-button sorting-button-active rounded-button">best</button>
            <button class="sorting-button rounded-button">recent</button>
        </div>
        
    <!-- new comment box, set to be hidden by default -->
    <div class="profile-card comment-box row">
        <div class="row sqs-row">
          <div class="col sqs-col-sub-trait comment-box-avatar">
            <img class="comment-profile-picture" src="https://i.pravatar.cc/130?img=1" /> 
          </div>
          <div class="col sqs-col-sub-trait comment-box-username">
            <span>Nilam Abey</span>
          </div>
        </div>
        <div class="row">
          <div class="sqs-col-12 comment-box-title">
              <input maxlength="300" placeholder="Title" class="text-xl font-medium false">
          </div>
        </div>
        <div class="row sqs-row">
          <div class="col sqs-col-comment new-attribute-container">
              <div class="rounded-button new-attribute">
                <div class="dropdown">
                  <button class="rounded-button dropdown-toggle">MBTI</button>
                  <div class="dropdown-menu">
                     <% mbti.forEach(type => { %>
                      <div class="dropdown-item"><%= type %></div>
                      <% }); %>
                  </div>
                </div>
              </div>
              <div class="rounded-button new-attribute">
                <div class="dropdown">
                  <button class="rounded-button dropdown-toggle">Enneagram</button>
                  <div class="dropdown-menu">
                     <% enneagram.forEach(eg => { %>
                      <div class="dropdown-item"><%= eg %></div>
                      <% }); %>
                  </div>
                </div>
              </div>
              <div class="rounded-button new-attribute">Enneagram</div>
              <div class="rounded-button new-attribute zodiac-sign">Zodiac</div>
          </div>
        </div>
        <div class="row">
          <div class="comment-box-body">
              <textarea class="text-xl font-medium false" name="comment-body-to-fill" id="commentBodyToFill" placeholder="Share your opinion by commenting here"></textarea>
          </div>
        </div>
     
        <!-- SEND BUTTON -->
        <div class="row sqs-row">
          <div class="col comment-send">
              <i class="material-icons send-icon send-button">send</i>
          </div>
        </div>
      </div>
    
    <!-- existing comments goes here -->
    <div id="comments-container"></div>
      
    </div>
</div>

<%- include('./comments-scripts.ejs') %>